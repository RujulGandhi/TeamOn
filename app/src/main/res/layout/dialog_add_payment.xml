<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/lightpinkbackground"
        android:gravity="center"
        android:text="Balance"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/toolBarPink"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/dialog_add_payment_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">

    </Spinner>

    <TextView
        android:id="@+id/dialog_add_payment_current_balance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/_15sdp"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/toolBarPink"
        android:textSize="@dimen/_30sdp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="How much money you want to withdraw?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/splashdatacolor"
        android:textSize="@dimen/_15sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/dialog_add_payment_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_weight="0.1"
            android:background="@drawable/alert_dialog_price"
            android:gravity="center"
            android:hint="$0.0"
            android:inputType="numberDecimal|number"
            android:maxLength="8"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/splashdatacolor"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/dialog_add_payment_txtsend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="0.2"
            android:background="@drawable/alert_dialog_send"
            android:gravity="center"
            android:text="@string/send"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/toolBarPink"
            android:textSize="@dimen/_18sdp" />
    </LinearLayout>


</LinearLayout>