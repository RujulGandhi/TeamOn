<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_facebook_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/twentytoolBarPink"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    tools:context="com.app.archirayan.teamon.Activity.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/activity_facebook_login_linearlyout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <TextView
                android:id="@+id/activity_facebook_login_txtlogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_50sdp"
                android:gravity="center"
                android:text="LOGO"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_23sdp" />

            <TextView
                android:id="@+id/activity_facebook_login_waitingfor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_50sdp"
                android:gravity="center"
                android:text="What are you waiting For? \n It's Time Join to the future group \n sales"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sdp" />


            <TextView
                android:id="@+id/activity_facebook_login_txtfblogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_50sdp"
                android:background="@drawable/facebook_login_bg"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/Loginfb"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sdp" />

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/activity_fb_signing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="center"
                android:text="Don't have account?"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sdp" />


            <TextView
                android:id="@+id/activity_facebook_login_txtsignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/signin_bg_signbtn"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/Singin"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
