<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_home_cateandfilter"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:animateLayoutChanges="true"
    android:background="@color/toolBarPink"
    android:orientation="horizontal"
    android:weightSum="2">

    <LinearLayout
        android:id="@+id/snackbar_category"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/fragment_home_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/category"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_8sdp"
            android:background="@drawable/ic_up" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/snackbar_filter"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:id="@+id/fragment_home_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/filter"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_8sdp"
            android:background="@drawable/ic_up" />
    </LinearLayout>
</LinearLayout>
