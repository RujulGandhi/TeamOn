<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightpinkbackground"
    android:orientation="horizontal">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@android:color/white"
        android:padding="@dimen/_3sdp"
        app:mrl_rippleColor="@color/twentytoolBarPink"
        app:mrl_rippleOverlay="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/adapter_product_image"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_120sdp"
                android:padding="@dimen/_3sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_placeholder" />


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:id="@+id/adapter_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:maxLength="50"
                    android:maxLines="2"
                    android:padding="@dimen/_5sdp"
                    android:text="ProductName"
                    android:textSize="@dimen/_16sdp" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_weight="6"
                    android:orientation="horizontal">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/adapter_product_sale"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:gravity="left|center"
                            android:text="Hello borther"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/adapter_product_saler_name"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:gravity="left|center"
                            android:text="Hello borther"
                            android:textColor="@color/toolBarPink"
                            android:textSize="@dimen/_10sdp" />


                    </LinearLayout>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:gravity="right"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/adapter_product_old_price"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:gravity="top|left|center"
                                android:text="Hello borther"
                                android:textSize="@dimen/_10sdp" />


                            <TextView
                                android:id="@+id/adapter_product_price"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:gravity="top|left|center"
                                android:text="Hello borther"
                                android:textColor="@color/toolBarPink"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/adapter_product_wishlist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="+wishlist"
                            android:textSize="@dimen/_10sdp" />


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</LinearLayout>