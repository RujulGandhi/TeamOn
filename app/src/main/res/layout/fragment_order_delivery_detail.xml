<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_completed_orders_delivery_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightpinkbackground"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_completed_orders_delivery_detail_txtcompleted"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/completed"
                android:textAllCaps="false"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/adapter_product_orders_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightpinkbackground"
                android:orientation="horizontal">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/ripple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@android:color/white"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingTop="@dimen/_2sdp"
                    app:mrl_rippleColor="@color/twentytoolBarPink"
                    app:mrl_rippleOverlay="true">

                    <LinearLayout
                        android:id="@+id/adapter_product_orders_list_linear"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/fragment_order_delivery_detail_pro_iv"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_placeholder" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/fragment_order_delivery_detail_proname_tv"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="4"
                                android:maxLength="50"
                                android:maxLines="2"
                                android:padding="@dimen/_5sdp"
                                android:text="ProductName"
                                android:textSize="@dimen/_10sdp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_weight="6"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">


                                    <TextView
                                        android:id="@+id/fragment_order_delivery_detail_proprice_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="0.5"
                                        android:gravity="left|center"
                                        android:text="$"
                                        android:textColor="@color/splashdatacolor"
                                        android:textSize="@dimen/_10sdp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/fragment_order_delivery_detail_pro_seller_name_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="0.5"
                                        android:gravity="left|center"
                                        android:text="Sale by"
                                        android:textColor="@color/toolBarPink"
                                        android:textSize="@dimen/_10sdp" />


                                </LinearLayout>

                                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:gravity="right"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:layout_weight="0.5"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/fragment_order_delivery_detail_order_status_tv"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.5"
                                            android:gravity="center|top|right"
                                            android:text="-"
                                            android:textColor="@color/green"
                                            android:textSize="@dimen/_12sdp" />

                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_completed_orders_delivery_detail_sale_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp">

                <TextView
                    android:id="@+id/fragment_completed_orders_delivery_detail_txttitlesaledetails"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="@string/saledetails"
                    android:textAllCaps="false"
                    android:textColor="@color/splashdatacolor"
                    android:textSize="@dimen/_15sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/fragment_orders_delivery_detail_txtclosed"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="Close - Nov 13 2016  21:05"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/fragment_orders_delivery_detail_txtpaymentmethod"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="Paypal method = paypal"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/fragment_orders_delivery_detail_txtunit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="Unit - 1"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/fragment_orders_delivery_detail_txtpaid"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="You pay - 50$"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/fragment_orders_delivery_detail_txtgetback"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="Get back - 10$"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/fragment_orders_delivery_detail_txtdeliverymethod"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="Delivery method - Shipping/pickup"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/lightpinkbackground"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_order_devlivery_detail_status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rectangle_border"
                        android:gravity="center"
                        android:text="@string/status"
                        android:textColor="@color/splashdatacolor"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_5sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/toolBarPink"
                        android:gravity="center"
                        android:text="@string/ihaveproblem"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_5sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/toolBarPink"
                        android:gravity="center"
                        android:text="@string/iconfirm"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>