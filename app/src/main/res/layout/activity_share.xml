<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_share"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/twentytoolBarPink"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    tools:context="com.app.archirayan.teamon.Activity.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/activity_share_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <TextView
                android:id="@+id/activity_share_txtlogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_50sdp"
                android:gravity="center"
                android:text="LOGO"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_23sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_50sdp"
                android:gravity="center"
                android:text="Your Account As Creatted! \n\n Now you can tell to your \n friends come to!"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_15sdp" />


            <TextView
                android:id="@+id/activity_share_txtshare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_50sdp"
                android:background="@drawable/signin_bg_signbtn"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/Share"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />


            <TextView
                android:id="@+id/activity_sign_in_txtdont_acc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:text="OR"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/activity_share_txtnothanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/share_pagegray_lyout"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/nothaks"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
