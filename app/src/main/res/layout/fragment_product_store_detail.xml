<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:weightSum="5">

            <TextView
                android:id="@+id/fragment_product_store_proname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="center|left"
                android:maxLines="2"
                android:text="Product Name"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="2.5"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="right|bottom"
                    android:text="Group Sales"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/fragment_product_store_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="right|top"
                    android:text="1:0:0:1:25:23"
                    android:textColor="@color/toolBarPink"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/fragment_product_store_unitsale"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="Unit Sales"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/fragment_product_store_soldby"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="Admin"
                    android:textColor="@color/toolBarPink"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="bottom"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:id="@+id/fragment_product_store_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/fragment_product_store_saleprice"
                    android:layout_toLeftOf="@+id/fragment_product_store_saleprice"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="$100"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/fragment_product_store_saleprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:text="$95"
                    android:textColor="@color/toolBarPink"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/fragment_product_store_buynow"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/green"
        android:text="@string/buynow"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/ivBack_ProductStoreDetails"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@drawable/back_arrow"
                    android:gravity="center"
                    android:orientation="vertical" />
            </LinearLayout>


            <ImageView
                android:id="@+id/fragment_product_store_details_image"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:src="@drawable/ic_placeholder" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:text="@string/about"
            android:textColor="@color/toolBarPink"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/fragment_product_store_details_about_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="left"
            android:maxHeight="@dimen/_180sdp"
            android:minHeight="@dimen/_80sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:text="@string/decabout"
            android:textColor="@color/splashdetailcolor"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:text="@string/addrs"
            android:textColor="@color/toolBarPink"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/fragment_product_store_details_store_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="left"
            android:maxHeight="@dimen/_175sdp"
            android:minHeight="@dimen/_75sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:scrollbars="vertical"
            android:text="@string/decaddrs"
            android:textColor="@color/splashdetailcolor"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>
</LinearLayout>
