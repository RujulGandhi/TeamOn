<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <com.sevenheaven.iosswitch.ShSwitchView
        android:id="@+id/adapter_setting_noti_switch"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:checked="true"
        android:thumbTint="@color/white"
        android:trackTint="@color/toolBarPink"
        app:tintColor="@color/toolBarPink" />

    <TextView
        android:id="@+id/adapter_setting_noti_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:gravity="center|left"
        android:textColor="@color/toolBarPink"
        android:textSize="@dimen/_10sdp" />
</LinearLayout>